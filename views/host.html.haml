- @page = "hosts"
:javascript
  $(document).ready(function() {
    var host = getParameterByName("host")
    $.getJSON("/1.0/rest/hosts/" + encodeURIComponent(host) + ".json", function(data) {
      var str = ''
      var hostData = data[0]
      var keys = keysOf(hostData).sort()
      for (var idx in keys) {
        var key = keys[idx]
        str = str + "<tr><td>" + key + "</td><td>" + hostData[key] + "</td></tr>"
      }
      $("#heading").text(hostData["name"] + " (" + hostData["alias"] + ")")
      $("#host > tbody:last").append(str);
    })
  })
%h1{:id => "heading"}
%table{:id => "host", :cellpadding => "0", :cellspacing => "0", :border => "0", :class => "bordered-table zebra-striped"}
  %thead
    %tr
      %th Attribute
      %th Value
  %tbody
