- @page = "servicegroups"
:javascript
  $(document).ready(function() {
    var group = getParameterByName("group")
    $.getJSON("/1.0/rest/servicegroups/" + encodeURIComponent(group), function(data) {
      var str = ''
      var groupData = data[0]
      var keys = keysOf(groupData).sort()
      for (var idx in keys) {
        var key = keys[idx]
        str = str + "<tr><td>" + key + "</td><td>" + groupData[key] + "</td></tr>"
      }
      $("#heading").text("Service group " + groupData["name"])
      $("#host > tbody:last").append(str);
    })
  })
%h1{:id => "heading"}
%table{:id => "host", :cellpadding => "0", :cellspacing => "0", :border => "0", :class => "bordered-table zebra-striped"}
  %thead
    %tr
      %th Attribute
      %th Value
  %tbody
